rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
        (request.resource.size < 5 * 1024 * 1024 && // 5MB max file size
        request.resource.contentType.matches('application/pdf'));
    }
  }
} 